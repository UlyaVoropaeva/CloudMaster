<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="globParent" alignment="center" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="AuthorisationController">
    <TextField fx:id="login" focusTraversable="false" promptText="login"/>
    <PasswordField fx:id="password" focusTraversable="false" promptText="password"/>
    <HBox alignment="CENTER">
        <Button alignment="CENTER" onAction="#onAuthorizationBtnClick" text="Авторизация" textAlignment="CENTER"/>
    </HBox>

</VBox>
